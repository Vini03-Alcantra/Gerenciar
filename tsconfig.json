{
  "compilerOptions": {
    "target": "es5",  
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs", 
    "baseUrl": "./src",   
    "paths": {
      "@modules/*":["modules/*"],
      "@shared/*":["shared/*"]
    },             
    "resolveJsonModule": true,              
    "esModuleInterop": true,                
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
